{
    "entities": {
        "userProfile": {
            "title": "User Profile",
            "description": "Represents a user's profile information.",
            "type": "object",
            "properties": {
                "uid": {
                    "type": "string",
                    "description": "The user's unique ID."
                },
                "email": {
                    "type": "string",
                    "format": "email",
                    "description": "The user's email address."
                },
                "displayName": {
                    "type": "string",
                    "description": "The user's display name."
                },
                "photoURL": {
                    "type": "string",
                    "format": "uri",
                    "description": "URL of the user's profile picture."
                }
            },
            "required": ["uid", "email"]
        },
        "calendarEvent": {
            "title": "Calendar Event",
            "description": "Represents an event in the user's calendar.",
            "type": "object",
            "properties": {
                "eventId": {
                    "type": "string",
                    "description": "The unique ID for the event."
                },
                "userId": {
                    "type": "string",
                    "description": "The ID of the user who owns the event."
                },
                "title": {
                    "type": "string",
                    "description": "The title of the event."
                },
                "type": {
                    "type": "string",
                    "enum": ["Class", "Assignment", "Exam", "Task", "Custom"],
                    "description": "The type of the event."
                },
                "description": {
                    "type": "string",
                    "description": "A description of the event."
                },
                "date": {
                    "type": "string",
                    "format": "date",
                    "description": "The date of the event in YYYY-MM-DD format."
                },
                "startTime": {
                    "type": "string",
                    "format": "time",
                    "description": "The start time of the event in HH:MM format."
                },
                "endTime": {
                    "type": "string",
                    "format": "time",
                    "description": "The end time of the event in HH:MM format."
                },
                "subject": {
                    "type": "string",
                    "description": "The subject related to the event."
                },
                "teacher": {
                    "type": "string",
                    "description": "The teacher related to the event."
                },
                "room": {
                    "type": "string",
                    "description": "The room or location of the event."
                },
                "priority": {
                    "type": "string",
                    "enum": ["low", "medium", "high"],
                    "description": "The priority of the event."
                },
                "difficultyLevel": {
                    "type": "string",
                    "enum": ["easy", "moderate", "hard"],
                    "description": "The difficulty level associated with the event."
                },
                "notificationEnabled": {
                    "type": "boolean",
                    "description": "Whether notifications are enabled for this event."
                },
                "reminderTime": {
                    "type": "string",
                    "enum": ["none", "10min", "30min", "1hr", "1day", "custom"],
                    "description": "When to send a reminder before the event."
                },
                "createdAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "The timestamp when the event was created."
                },
                "updatedAt": {
                    "type": "string",
                    "format": "date-time",
                    "description": "The timestamp when the event was last updated."
                }
            },
            "required": ["eventId", "userId", "title", "type", "date", "startTime", "endTime"]
        }
    },
    "auth": {
        "providers": ["Google", "GitHub", "Email/Password"]
    },
    "firestore": {
        "/users/{userId}": {
            "schema": {
                "$ref": "#/entities/userProfile"
            },
            "description": "Stores user profile information."
        },
        "/calendarEvents/{eventId}": {
            "schema": {
                "$ref": "#/entities/calendarEvent"
            },
            "description": "Stores all calendar events for all users."
        }
    }
}
